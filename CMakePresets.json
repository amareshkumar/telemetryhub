{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 23, "patch": 0 },

  "configurePresets": [
    {
      "name": "vs2026-debug",
      "displayName": "VS 2026 (x64, Debug)",
      "generator": "Visual Studio 18 2026",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build_vs26",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "vs2026-release",
      "displayName": "VS 2026 (x64, Release)",
      "generator": "Visual Studio 18 2026",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build_vs26",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "INCLUDE": "",
        "LIB": "",
        "LIBPATH": "",
        "CPATH": "",
        "PKG_CONFIG_PATH": "",
        "CPLUS_INCLUDE_PATH": "",
        "C_INCLUDE_PATH": ""
      }
    },
    {
      "name": "vs2022-release-ci",
      "displayName": "VS 2022 (x64, Release, CI)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build_vs_ci",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON",
        "CMAKE_MSVC_INCLUDE_EXTERNAL_HEADERS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "INCLUDE": "",
        "LIB": "",
        "LIBPATH": "",
        "CPATH": "",
        "PKG_CONFIG_PATH": "",
        "CPLUS_INCLUDE_PATH": "",
        "C_INCLUDE_PATH": ""
      }
    },
    {
      "name": "linux-ninja-debug",
      "displayName": "Linux Ninja (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    { "name": "vs2026-debug", "configurePreset": "vs2026-debug" },
    { "name": "vs2026-release", "configurePreset": "vs2026-release", "configuration": "Release" },
    { "name": "vs2022-release-ci", "configurePreset": "vs2022-release-ci", "configuration": "Release" },
    { "name": "linux-ninja-debug", "configurePreset": "linux-ninja-debug" }
  ],

  "testPresets": [
    { "name": "vs2026-debug", "configurePreset": "vs2026-debug" },
    { "name": "vs2026-release", "configurePreset": "vs2026-release", "configuration": "Release" },
    { "name": "vs2022-release-ci", "configurePreset": "vs2022-release-ci", "configuration": "Release", "output": { "outputOnFailure": true } },
    { "name": "linux-ninja-debug", "configurePreset": "linux-ninja-debug" }
  ]
}
